@model hrms.Models.Payroll
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Payroll", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<table>
    <tr>
        <td>@Html.LabelFor(model => model.EmployeeId)</td>
        <td>
            @Html.DropDownListFor(m => m.EmployeeId, ViewBag.Employees as SelectList, "-- Select Employee --", new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>@Html.LabelFor(model => model.BasicSalary)</td>
        <td>@Html.TextBoxFor(model => model.BasicSalary, new { @class = "form-control", type = "number", step = "0.01" })</td>
    </tr>

    <tr>
        <td>@Html.LabelFor(model => model.Deductions)</td>
        <td>@Html.TextBoxFor(model => model.Deductions, new { @class = "form-control", type = "number", step = "0.01" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(model => model.Allowances)</td>
        <td>
            @Html.TextBoxFor(model => model.Allowances, new { @class = "form-control", type = "number", step = "0.01" })
        </td>
    </tr>
    <tr>
        <td>@Html.LabelFor(model => model.PaymentDate)</td>
        <td>
            @Html.TextBoxFor(model => model.PaymentDate, new { @class = "form-control", type = "date" })
        </td>
    </tr>

    <tr>
        <td></td>
        <td>
            <input type="submit" value="submit" class="btn btn-primary" />
        </td>

    </tr>
</table>
}

